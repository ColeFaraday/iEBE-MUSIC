#!/bin/bash -l
#SBATCH --qos=regular
#SBATCH -N 1
#SBATCH -A m1820
#SBATCH -J music
#SBATCH -t 10:00:00
#SBATCH -L SCRATCH
#SBATCH -C haswell

export OMP_PROC_BIND=true
export OMP_PLACES=threads

num_of_nodes=1
# run all the job
for (( nodeid=1; nodeid <= $num_of_nodes; nodeid++ ))
do
    export OMP_NUM_THREADS=4
    srun -N 1 -n 16 -c 4 python job_MPI_wrapper.py 16 $nodeid &
done
wait
